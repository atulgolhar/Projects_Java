package oopConcepts;

public class Car {
	private String make;
	int speed;
	int gear;
	
	public Car() { 			// constructor
		this(10,2);
		System.out.println("WITH ARGUMENTS 10, 2");
		this.speed = 0;
		this.gear = 0;
		System.out.println("Executing constructor WITHOUT any arguments");
	}
	
	public Car(int speed, int gear) {
		this.speed = speed;
		this.gear = gear;
		System.out.println("Executing constructor WITHHH...10,2...HHHH arguments");
	}
	
	// "this" refers to the instance of the class (object)
	public void setMake(String make) {
		this.make = make;
	}
